{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Backend Server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/be-node/server.js",
      "cwd": "${workspaceFolder}/be-node",
      "envFile": "${workspaceFolder}/be-node/.env",
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "node",
      "sourceMaps": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Backend (with nodemon)",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/be-node/server.js",
      "cwd": "${workspaceFolder}/be-node",
      "envFile": "${workspaceFolder}/be-node/.env",
      "console": "integratedTerminal",
      "restart": true,
      "internalConsoleOptions": "neverOpen"
    }
  ]
}

